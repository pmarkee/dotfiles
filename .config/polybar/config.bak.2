[colors]
background = ${xrdb:background}
background-wm = #444
background-alt = #2d2d2d
foreground = ${xrdb:foreground}
foreground-alt = #555
primary = #3c71ea
secondary = ${xrdb:color3}
alert = #ed0b0b

[bar/bar]
monitor = ${env:MONITOR:eDP-1}
monitor-fallback =
monitor-strict = false
monitor-exact = true
#override-redirect = true
wm-restack = bspwm
enable-ipc = true
fixed-center = false
bottom = false
separator =
#dim-value = 1.0

width = 100%
height = 32
offset-x = 0
offset-y = 0
radius = 0.0

#background-0 = ${colors.primary}
#background-1 = ${colors.secondary}
#background-2 = ${colors.alert}
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding = 0
module-margin-left = 0
module-margin-right = 1

font-0 = Hack:pixelsize=11;
font-1 = Monospace:pixelsize=11;
font-2 = unifont:pixelsize=11;

modules-left = bspwm xwindow
modules-right = pacman-packages time

tray-position = right
tray-padding = 1
tray-background = ${colors.background-alt}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = default

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background-wm}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

; Separator in between workspaces
; label-separator = |

[module/pacman-packages]
type = custom/ipc
hook-0 = sudo pacman -Qu | wc -l
format-prefix = "ðŸ“¦ "
format-underline = #268bd2
format-background = ${colors.background-alt}
format-padding = 1
initial = 1

[module/memory]
type = custom/script
exec = i3memory
label = "%output%"
format-prefix = "ðŸ§  "
format-underline = #268bd2
format-background = ${colors.background-alt}
format-padding = 1

[module/wifi]
type = custom/script
exec = i3wifi
label = "%output%"
format-prefix = "ðŸ“¡ "
format-underline = #268bd2
format-background = ${colors.background-alt}
format-padding = 1

[module/network-speed]
type = custom/script
exec = i3speedtest
label = "%output%"
format-underline = #268bd2
format-background = ${colors.background-alt}
format-padding = 1

[module/cpu-usage]
type = custom/script
exec = polycpu
label = "%output%"
interval = 10
format-prefix = "ðŸ’» "
format-underline = #268bd2
format-background = ${colors.background-alt}
format-padding = 1

[module/cpu-temperature]
type = custom/script
exec = polytemp
label = "%output%"
interval = 10
format-underline = #268bd2
format-background = ${colors.background-alt}
format-padding = 1

[module/volume]
type = custom/ipc
hook-0 = i3volume
click-left = $TERMINAL -e alsamixer
initial = 1
format-background = ${colors.background-alt}
format-underline = #268bd2
format-padding = 1

[module/time]
type = custom/script
exec = date '+%d/%m/%Y %H:%M:%S'
;click-left = $TERMINAL -e calcurse
label = "%output%"
interval = 5
format-underline = #268bd2
format-background = ${colors.background-alt}
format-padding = 1

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = true
#throttle-output = 5
#throttle-output-for = 10
#throttle-input-for = 30

[global/wm]
margin-top = 0
margin-bottom = 0

